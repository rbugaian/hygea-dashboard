<%= content_for :sections do %>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h1 class="page-header">Dashboard</h1>
  
  <h2 class="sub-header form-task-heading">Create personnel</h2>

<div class="panel panel-default">
  <div class="panel-body" >
  
    <%= form_tag("/create_doctor", method: "post") do %>

      <div class="form-group task-create-field-container" >
        <h5 >Firstname:</h5>
        <%= text_field_tag :first_name, nil, class: 'form-control', placeholder: 'Enter firstname', required: true, autofocus: true %>

        <h5 >Lastname:</h5>
        <%= text_field_tag :last_name, nil, class: 'form-control', placeholder: 'Enter lastname', required: true %>
    
        <h5 >Email:</h5>
        <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Enter email', required: true %>
        <h5 >Password:</h5>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter password', required: true %>
      </div>
    
      <div class="col-md-6">
        <%= link_to 'Cancel', {controller: 'dashboard', action: 'personnel_section'}, class: 'btn btn-lg btn-danger btn-block form-create-task-button'%>
      </div>

      <div class="col-md-6">
        <%= submit_tag 'Create', class: 'btn btn-lg btn-success btn-block form-create-task-button' %>
      </div>

    <% end %>

</div>
</div>

<% end %>

<%= render template: 'dashboard/show'  %>